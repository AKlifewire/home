{
  "type": "energy-meter",
  "config": {
    "name": "3-Phase Energy Meter",
    "model": "EM3000",
    "deviceId": "meter-001",
    "phases": 3,
    "measurements": {
      "voltage": {
        "unit": "V",
        "ranges": {
          "min": 0,
          "max": 500,
          "warning": 440,
          "critical": 460
        }
      },
      "current": {
        "unit": "A",
        "ranges": {
          "min": 0,
          "max": 100,
          "warning": 80,
          "critical": 90
        }
      },
      "power": {
        "unit": "kW",
        "ranges": {
          "min": 0,
          "max": 50
        }
      }
    }
  }
}
