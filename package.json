{
  "name": "smart-home-iot-platform",
  "version": "1.0.0",
  "description": "Smart Home IoT Platform with Dynamic UI",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:ui-generation": "node test/ui-generation-test.js",
    "test:device-simulation": "node test/device-simulation-test.js",
    "lint": "eslint . --ext .js,.ts",
    "build": "tsc",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "destroy:dev": "cdk destroy --all --force --context environment=dev",
    "setup:test": "node setup-test-env.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/smart-home-iot-platform.git"
  },
  "keywords": [
    "iot",
    "smart-home",
    "aws",
    "cdk",
    "flutter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-cdk-lib": "^2.80.0",
    "aws-sdk": "^2.1386.0",
    "constructs": "^10.2.52",
    "dotenv": "^16.0.3",
    "mqtt": "^4.3.7",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "aws-cdk": "^2.80.0",
    "chai": "^4.3.7",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}