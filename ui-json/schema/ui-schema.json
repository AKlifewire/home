{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device UI Layout Schema",
  "description": "Schema for dynamically generating device-specific UI layouts",
  "type": "object",
  "required": ["version", "deviceId", "layouts"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version for compatibility tracking"
    },
    "deviceId": {
      "type": "string",
      "description": "Unique identifier for the device"
    },
    "layouts": {
      "type": "array",
      "description": "List of UI layouts for different device views",
      "items": {
        "type": "object",
        "required": ["name", "components"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the layout view (e.g., 'main', 'settings', 'dashboard')"
          },
          "components": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "id", "properties"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "toggle",
                    "slider",
                    "gauge",
                    "chart",
                    "camera",
                    "energyMeter",
                    "button",
                    "sensor",
                    "status",
                    "alert"
                  ],
                  "description": "Type of UI component"
                },
                "id": {
                  "type": "string",
                  "description": "Unique identifier for the component"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string",
                      "description": "Display label for the component"
                    },
                    "topic": {
                      "type": "string",
                      "description": "MQTT topic for real-time updates"
                    },
                    "icon": {
                      "type": "string",
                      "description": "Icon identifier for the component"
                    },
                    "unit": {
                      "type": "string",
                      "description": "Unit of measurement (e.g., Â°C, kWh)"
                    },
                    "min": {
                      "type": "number",
                      "description": "Minimum value for numeric components"
                    },
                    "max": {
                      "type": "number",
                      "description": "Maximum value for numeric components"
                    },
                    "step": {
                      "type": "number",
                      "description": "Step value for numeric inputs"
                    },
                    "streamUrl": {
                      "type": "string",
                      "description": "URL for video stream (camera components)"
                    },
                    "refreshInterval": {
                      "type": "number",
                      "description": "Refresh interval in milliseconds"
                    },
                    "style": {
                      "type": "object",
                      "description": "Custom styling properties",
                      "properties": {
                        "width": {
                          "type": "number"
                        },
                        "height": {
                          "type": "number"
                        },
                        "color": {
                          "type": "string"
                        },
                        "backgroundColor": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "actions": {
                  "type": "array",
                  "description": "Available actions for the component",
                  "items": {
                    "type": "object",
                    "required": ["type", "topic", "payload"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["toggle", "set", "get", "reset"]
                      },
                      "topic": {
                        "type": "string"
                      },
                      "payload": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "version": "1.0.0",
      "deviceId": "device123",
      "layouts": [
        {
          "name": "main",
          "components": [
            {
              "type": "toggle",
              "id": "relay1",
              "properties": {
                "label": "Main Light",
                "topic": "device123/relay/1",
                "icon": "lightbulb"
              },
              "actions": [
                {
                  "type": "toggle",
                  "topic": "device123/relay/1/set",
                  "payload": {
                    "state": "VALUE"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}